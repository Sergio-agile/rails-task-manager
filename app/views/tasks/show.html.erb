<h2><%= @task.title %></h2>
<%= link_to "Edit this task", edit_task_path(@task) %>
<%= link_to "Delete this task", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<p><%= @task.details %></p>
<div>
  <input type="checkbox" name="completed" value="<%= @task.id %>" <%= @task.completed ? "checked" : "" %>/>This task is <%= @task.completed ? "completed" : "pending" %>
</div>
<hr>
<%= link_to "Back to list", tasks_path %>
